---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  lead?: string;
}

const { title = "AI Flashcards", lead } = Astro.props;
---

<Layout title={title}>
  <main class="min-h-screen bg-neutral-50 px-4 py-10">
    <div class="mx-auto flex w-full max-w-md flex-col gap-6">
      <div class="space-y-2 text-center">
        <p class="text-xs uppercase tracking-[0.2em] text-neutral-500">AI Flashcards</p>
        <h1 class="text-3xl font-semibold text-neutral-900">{title}</h1>
        {lead ? <p class="text-sm text-neutral-600">{lead}</p> : null}
      </div>

      <section class="rounded-2xl border border-neutral-200 bg-white p-6 shadow-sm">
        <slot />
      </section>

      <div class="text-center text-sm text-neutral-600">
        <slot name="footer" />
      </div>
    </div>
  </main>
</Layout>
